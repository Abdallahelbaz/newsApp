<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A3049"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_general"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="general"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_sports"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="sports"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_technology"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="technology"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_science"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="science"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_health"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="health"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_entertainment"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="entertainment"
                android:textSize="12sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn_business"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="6dp"
                android:background="@drawable/cutom_button"
                android:padding="6dp"
                android:text="business"
                android:textSize="12sp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/custom_search"
        app:cardElevation="8dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/SV_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textDirection="anyRtl"
            app:backgroundTint="@null"
            android:background="@drawable/custom_search"
            app:defaultQueryHint="Search News"
            app:iconifiedByDefault="false" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"


        android:background="#2A3049" />

</LinearLayout>